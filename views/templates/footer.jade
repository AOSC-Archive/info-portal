mixin myDearAOSC()
  .col-xs-4.col-sm-2.col-md-2.col-lg-3 
    img.pull-right.afe-footer-logo(src="assets/i/aosc.svg")
  .col-xs-8.col-sm-10.col-md-10.col-lg-9
    h4 Anthon Open Source Community
    p  Copyleft 2011–2015, members of the community.
    p  AOSC "Safe" Web Team, 2015. Bootstrap.
    p  粤 ICP 备 14040623 号

footer
  .container
    .row.col-md-10.col-md-offset-1.col-xs-12.afe-footer-links
      .col-lg-5.visible-lg(style="padding-left: 0")
        +myDearAOSC()
      .col-xs-12.col-lg-7.hidden-xs
        .col-xs-6.col-sm-3.col-md-2.col-lg-3.col-lg-offset-3.col-sm-offset-3.col-md-offset-2
          h4 SITES
          ul
            li: a(href='#') TEMP. PORTAL
        .col-xs-6.col-sm-3.col-md-2.col-lg-3
          h4 FIND US
          ul
            li: a(href="https://webchat.freenode.net/?channels=aosc", target='_blank') IRC
        .col-xs-6.col-sm-3.col-md-4.col-md-offset-1.col-lg-3.col-lg-offset-0
          h4 SPONSORS
          ul.afe-ack-logos
            li: a(href="https://www.qingcloud.com/", target='_blank')
              img(src="assets/i/qingcloud.svg", style="max-width:100px")
            li: a(href="https://gitcafe.com/", target='_blank')
              img(src="assets/i/gitcafe.svg", style="max-width:100px")
      .col-xs-12.hidden-lg
        +myDearAOSC()
