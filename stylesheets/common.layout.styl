@import 'functions/layout.styl'

#wrapper
	padding-bottom: 20px

li
	list-style: none

ol, ul
	padding-left: 0

p, code
	word-wrap: break-word
	word-break: normal
	white-space: normal

code
	color: rgb(14,121,161)

body
	margin-top: 3rem

.afe-literal-list
	li
		list-style: circle inside none

h1, h2, h3, h4, h5, h6, p, a, li, em, span
	font-sans-serif()

.list-group-item-indentificator
	display: inline-block
	min-width: 12rem
	margin-right: 1.5rem
.afe-littlecaption
	font-weight: 300
	color: #AAA

